    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                // "runserver"
                "runserver_plus",
                "--cert-file=../ssl/cert.pem",
                "--key-file=../ssl/key.pem",
            ],
            "django": true,
            "autoStartBrowser": false
        }
    ]
}